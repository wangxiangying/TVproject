<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingStart="5dip"
    android:theme="@style/ThemeOverlay.TVProject.FullscreenContainer">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/money_come" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dip"
                    android:text="饭折信息展示大厅"
                    android:textColor="#333333"
                    android:textSize="18dip"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="140dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dip"
                        android:elevation="2dp"
                        android:src="@drawable/fanzhecrcle"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dip"
                            android:text="用户总数"
                            android:textColor="#3d3e41"
                            android:textSize="13dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/peopleCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10010 "
                            android:textColor="#9fa4a5"
                            android:textSize="12dip" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dip"
                            android:text="品牌总数"
                            android:textColor="#3d3e41"
                            android:textSize="13dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/brandCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="445"
                            android:textColor="#9fa4a5"
                            android:textSize="12dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dip"
                            android:text="店铺总数"
                            android:textColor="#3d3e41"
                            android:textSize="13dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mercCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2234"
                            android:textColor="#9fa4a5"
                            android:textSize="12dip" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:orientation="horizontal"
                        android:paddingLeft="5dip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="2dip"
                            android:orientation="vertical"
                            android:padding="5dip">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="2dip">

                                <ImageView
                                    android:layout_width="16dip"
                                    android:layout_height="16dip"
                                    android:src="@drawable/small" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="3dip"
                                    android:text="今日"
                                    android:textColor="#333333"
                                    android:textSize="12dip"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/timeTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="#222222"
                                    android:textSize="14dip"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/todayPanel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="2dip"
                                android:orientation="horizontal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Panel"
                        android:layout_width="match_parent"
                        android:layout_height="320dip"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:paddingLeft="10dip"
                        android:paddingTop="5dip">

                        <LinearLayout
                            android:layout_width="240dip"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="16dip"
                                    android:layout_height="16dip"
                                    android:layout_marginLeft="5dip"
                                    android:src="@drawable/canju" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="3dip"
                                    android:text="储值"
                                    android:textColor="#333333"
                                    android:textSize="12dip"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rechargeList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="3dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="240dip"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="3dp"
                            android:paddingStart="3dip">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="16dip"
                                    android:layout_height="16dip"
                                    android:layout_marginLeft="5dip"
                                    android:src="@drawable/gouwuche" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="3dip"
                                    android:text="消费"
                                    android:textColor="#333333"
                                    android:textSize="12dip"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/consumptionsList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="3dip" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="16dip"
                            android:layout_height="16dip"
                            android:layout_marginLeft="5dip"
                            android:src="@drawable/shangdian" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日八强"
                            android:textColor="#333333"
                            android:textSize="12dip"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/merchantTopList"
                        android:layout_width="460dip"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="6dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dip"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--                <com.amap.api.maps.MapView-->
                    <!--                    android:id="@+id/map"-->
                    <!--                    android:layout_width="450dip"-->
                    <!--                    android:layout_height="320dip" />-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="16dip"
                            android:layout_height="16dip"
                            android:layout_marginLeft="5dip"
                            android:src="@drawable/gouwuche" />

                        <TextView
                            android:id="@+id/consumerCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消费店铺"
                            android:textColor="#333333"
                            android:textSize="12dip"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/merchantList"
                        android:layout_width="460dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dip" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>