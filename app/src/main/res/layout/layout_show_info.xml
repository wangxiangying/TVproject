<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.TVProject.FullscreenContainer">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbfcfc"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/money_come">

                </ImageView>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dip"
                    android:text="饭折信息展示大厅"
                    android:textColor="#aa222222"
                    android:textSize="11dip"

                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/time"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2021年12月16日"
                        android:textColor="#aa222222"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    android:elevation="2dp"
                    android:src="@drawable/fanzhecrcle"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dip"
                        android:text="用户总数"
                        android:textColor="#3d3e41"
                        android:textSize="13dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/peopleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10010 "
                        android:textColor="#9fa4a5"
                        android:textSize="12dip" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dip"
                        android:text="品牌总数"
                        android:textColor="#3d3e41"
                        android:textSize="13dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/brandCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="445"
                        android:textColor="#9fa4a5"
                        android:textSize="12dip" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dip"
                        android:text="店铺总数"
                        android:textColor="#3d3e41"
                        android:textSize="13dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mercCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2234"
                        android:textColor="#9fa4a5"
                        android:textSize="12dip" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dip"
                        android:text="总充值金额"
                        android:textColor="#3d3e41"
                        android:textSize="13dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/chargeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100100 元"
                        android:textColor="#9fa4a5"
                        android:textSize="12dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"

                    android:orientation="vertical"
                    android:padding="5dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="14dip"
                            android:layout_height="14dip"
                            android:layout_marginLeft="5dip"
                            android:src="@drawable/small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dip"
                            android:text="今日"
                            android:textColor="#9fa4a5"
                            android:textSize="12dip"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/todayPanel"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Panel"
                    android:background="#ffffff"
                    android:elevation="3dp"
                    android:padding="5dip"
                    android:layout_weight="3"
                    android:layout_margin="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout android:padding="5dip"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="14dip"
                                android:layout_height="14dip"
                                android:layout_marginLeft="5dip"
                                android:src="@drawable/canju" />

                            <TextView
                                android:paddingLeft="3dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="储值"
                                android:textColor="#9fa4a5"
                                android:textSize="12dip"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/marchList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:background="#cccccc"
                        android:layout_width="1px"
                        android:layout_marginTop="30dip"
                        android:layout_marginBottom="30dip"
                        android:layout_height="match_parent"/>
                    <LinearLayout android:padding="5dip"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="14dip"
                                android:layout_height="14dip"
                                android:layout_marginLeft="5dip"
                                android:src="@drawable/news" />

                            <TextView
                                android:paddingLeft="3dip"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="消费"
                                android:textColor="#9fa4a5"
                                android:textSize="12dip"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rechargeList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bottomPanel"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>
    </LinearLayout>


</LinearLayout>